root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = unset
indent_style = unset

[*{.ts,.tsx}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.json]
tab_width = 4
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true

[*.md]
tab_width = 4
indent_size = 4
indent_style = tab
trim_trailing_whitespace = false
